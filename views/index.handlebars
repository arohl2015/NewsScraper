<nav class="navbar navbar-expand-lg navbar navbar-light" style="background-color: red">
    <a class="navbar-brand" href="/">Scraping News with Mongo</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
        aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link active" href="/">Home
                <span class="sr-only">(current)</span>
            </a>
            <a class="nav-item nav-link" href="/saved">Saved Articles</a>
            <a href="/scrape" class="btn btn-warning active" role="button" aria-pressed="true">Scrape Articles</a>
        </div>
    </div>
</nav>
<div class="container-fluid">
    <div class="jumbotron text-center background-image">
        <div class="overlay">
            <div class="caption">
                <h1 class="display-1 text-white">Mongo Scraper</h1>
                <h2 class="text-white">Buzzfeed</h2>
            </div>
        </div>
    </div>
    <div class=row>
        <div class="col-12">
            {{#if articles}}
            {{#each articles}}
            <div class="card w-90">
                <div class="card-header text-white bg-warning">
                    <a href={{link}} target="_blank" class="text-white">
                        <h2>{{title}}</h2>
                    </a>
                </div>
                <div class="card-body">
                    <button id="{{_id}}" class="btn btn-success save-btn">Save Article</button>
                </div>
            </div>
            <br>
            {{/each}}
            {{else}}
            <div class="card text-white bg-warning w-90 p-1">
                <div class="card-body text-center">
                    No new articles to see here
                </div>
            </div>
            {{/if}}
        </div>
    </div>
</div>